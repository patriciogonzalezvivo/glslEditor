{
  "name": "glslEditor",
  "version": "0.0.17",
  "description": "Simple GLSL Fragment Shader Editor",
  "main": "src/main.js",
  "scripts": {
    "build": "$(npm bin)/gulp",
    "dev": "$(npm bin)/gulp electron",
    "start": "electron .",
    "package-local": "electron-packager . --out ./build --overwrite",
    "package-all": "electron-packager . --out ./build --overwrite --all",
    "postinstall": "ln -nsf ../src/js node_modules/app",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "$(npm bin)/jshint *.js src/ || true; jscs *.js src/ || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patriciogonzalezvivo/glslEditor.git"
  },
  "keywords": [
    "glsl",
    "shader",
    "editor"
  ],
  "author": "Patricio Gonzalez Vivo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patriciogonzalezvivo/glslEditor/issues"
  },
  "homepage": "https://github.com/patriciogonzalezvivo/glslEditor#readme",
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babelify": "^6.4.0",
    "browserify": "^11.2.0",
    "browserify-shim": "^3.8.11",
    "csswring": "^4.0.0",
    "electron": "^1.6.5",
    "electron-connect": "^0.6.1",
    "electron-packager": "^8.6.0",
    "gulp": "^3.9.0",
    "gulp-derequire": "^2.1.0",
    "gulp-livereload": "^3.8.1",
    "gulp-plumber": "^1.0.1",
    "gulp-postcss": "^6.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "jscs": "^2.4.0",
    "jshint": "^2.8.0",
    "modernizr": "^3.1.0",
    "postcss-color-hex-alpha": "^2.0.0",
    "postcss-custom-properties": "^5.0.0",
    "postcss-import": "^7.1.0",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^1.3.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "babel": "^5.8.29",
    "babel-runtime": "5.8.29",
    "codemirror": "5.8.0",
    "cross-storage": "^1.0.0",
    "document-register-element": "^1.3.0",
    "glslCanvas": "^0.0.25",
    "xhr": "^2.2.0"
  },
  "browserify-shim": {}
}
